{
  "manifest_version": 3,
  "name": "oto Librarian",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "dist/bundle.js",
    "type": "module"

  },
  "action": {
    "default_title": "oto Librarian",
    "default_popup": "main.html"
  },
  "permissions": ["tabGroups", "tabs", "storage", "bookmarks", "unlimitedStorage"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js",
        "vectra"
      ]
    }
  ]
}